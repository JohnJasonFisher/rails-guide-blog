<% if session[:user_id] != nil %>
        <h2>Welcome, <%= @user.username %></h2>
<% else %>

    <%= form_tag '/login' do %>

        <%= label_tag :username%>
        <%= text_field_tag :username %>

        <%= label_tag :password%>
        <%= password_field_tag :password%>
        
        <%= submit_tag "Login"%>
    <%end%>

<%end%>

